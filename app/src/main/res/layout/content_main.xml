<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zubb.jannarongj.z_folding.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#505050"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_rmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_light"
                android:gravity="center_vertical"
                android:text="โรง"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="1dp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_light"
                android:gravity="center_vertical"
                android:text="ช่อง"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="1dp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_light"
                android:gravity="center_vertical"
                android:text="เสา"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="0.3"
                android:background="@android:color/holo_red_light"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สรุปผล"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewXr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="พับเหล็ก"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mDateDisplayr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_vertical"
                android:onClick="onDateclick"
                android:text="XX/XX/XXXX"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="165dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="HN."
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewx"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="QA"
                android:textAlignment="textStart"
                android:textColor="#00ea5a"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="QTY"
                android:textAlignment="textStart"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="WEIGHT"
                android:textAlignment="textEnd"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lvf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ln2"
            android:orientation="horizontal">

            android:orientation="horizontal">

            <TextView
                android:id="@+id/sumweight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b9b9b9"
                android:gravity="center"
                android:text="sumwe"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumcount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b9b9b9"
                android:gravity="center"
                android:text="sumcount"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumqty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b9b9b9"
                android:gravity="center"
                android:text="sumqty"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndelete"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="#d84343"
                android:gravity="center"
                android:text="Delete"
                android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:id="@+id/hedt"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:width="0dp"
            android:height="0dp"
            android:background="#00000000"
            android:cursorVisible="false"
            android:ems="10"
            android:imeOptions="actionDone"

            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:textColor="@android:color/transparent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>

